<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false"
        >
        <layer-list>
            <item
                >
                <shape>
                        <solid android:color="#FF0000"/>

                </shape>

            </item>
            <item
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                >
                <shape>
                    <gradient android:startColor="#00FF00"
                        android:endColor="#0000FF"
                        />
                    <corners
                        android:radius="40dp"

                        />
                </shape>

            </item>
        </layer-list>
    </item>
    <item
        android:state_pressed="true"
        >
        <layer-list>
            <item
                >
                <shape>
                    <solid android:color="#0000FF"/>

                </shape>

            </item>
            <item
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"
                >
                <shape>
                    <gradient android:startColor="#FF0000"
                        android:endColor="#0000FF"
                        />
                    <corners
                        android:radius="40dp"

                        />
                </shape>

            </item>
        </layer-list>
    </item>
</selector>