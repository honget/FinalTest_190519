<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#30AAFF"
                        android:endColor="#2AD0FF"
                        android:centerX="10%"
                        />
                    <corners
                        android:radius="30dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#209AEF"
                        android:endColor="#1AC0EF"
                        android:centerX="10%"
                        />
                    <corners
                        android:radius="30dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>